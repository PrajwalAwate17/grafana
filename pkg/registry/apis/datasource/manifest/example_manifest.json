{
  "appName": "example-datasource",
  "group": "example.grafana.app",
  "kinds": [
    {
      "kind": "DataSourceConfig",
      "scope": "Namespaced",
      "conversion": false,
      "versions": [
        {
          "name": "v1",
          "schema": {
            "type": "object",
            "properties": {
              "url": {
                "type": "string",
                "description": "The URL of the datasource"
              },
              "apiKey": {
                "type": "string",
                "description": "API key for authentication",
                "x-secure": true
              },
              "timeout": {
                "type": "integer",
                "description": "Request timeout in seconds",
                "default": 30
              },
              "tlsSkipVerify": {
                "type": "boolean",
                "description": "Skip TLS certificate verification",
                "default": false
              }
            },
            "required": [
              "url",
              "apiKey"
            ]
          }
        }
      ]
    },
    {
      "kind": "QueryOptions",
      "scope": "Namespaced",
      "conversion": false,
      "versions": [
        {
          "name": "v1",
          "schema": {
            "type": "object",
            "properties": {
              "maxDataPoints": {
                "type": "integer",
                "description": "Maximum number of data points to return",
                "default": 1000
              },
              "cacheTimeout": {
                "type": "integer",
                "description": "Cache timeout in seconds",
                "default": 300
              }
            }
          }
        }
      ]
    }
  ]
}